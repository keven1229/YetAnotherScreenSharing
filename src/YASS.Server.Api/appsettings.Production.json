{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Srs": {
    // RTMP 必须保留端口（无法通过 HTTP 反代）
    "RtmpServer": "rtmp://your-server.com:1935",
    // HTTP 服务通过 Nginx 反代，无需端口
    "HttpFlvServer": "https://your-server.com",
    "HlsServer": "https://your-server.com",
    "AppName": "live",
    "H264Suffix": "_h264"
  }
}
