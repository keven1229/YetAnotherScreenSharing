@page "/watch/{RoomId}"
@using YASS.Shared.Models
@using YASS.Web.Services
@inject IRoomApiService RoomService
@inject IPlayerService PlayerService
@inject NavigationManager Navigation
@implements IAsyncDisposable

<div class="container-fluid py-3">
    @if (_errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
            <button class="btn btn-link" @onclick="GoBack">返回首页</button>
        </div>
    }
    else if (_room == null)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">加载中...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- 视频播放器 -->
            <div class="col-12 col-lg-9 mb-3">
                <div class="card bg-dark">
                    <div class="ratio ratio-16x9">
                        <video id="videoPlayer" 
                               class="w-100 h-100 bg-black" 
                               controls 
                               autoplay 
                               muted>
                        </video>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="card-title text-white mb-1">@_room.Name</h4>
                                <p class="text-muted mb-0">@_room.OwnerName</p>
                            </div>
                            <div class="btn-group">
                                @if (!_isPlaying)
                                {
                                    <button class="btn btn-success" @onclick="Play" disabled="@_isLoading">
                                        <span class="me-1">▶</span> 播放
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-warning" @onclick="Stop">
                                        <span class="me-1">⏹</span> 停止
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 侧边信息 -->
            <div class="col-12 col-lg-3">
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>房间信息</strong>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>状态</span>
                            <span class="badge @GetStatusBadgeClass(_room.Status)">
                                @GetStatusText(_room.Status)
                            </span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>观看人数</span>
                            <span>@_room.ViewerCount</span>
                        </li>
                        @if (_room.StartedAt.HasValue)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>开始时间</span>
                                <span>@_room.StartedAt.Value.ToLocalTime().ToString("HH:mm")</span>
                            </li>
                        }
                        @if (_playbackUrls != null)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>编码格式</span>
                                <span>@_playbackUrls.OriginalCodec</span>
                            </li>
                        }
                    </ul>
                </div>

                @if (_room.Description != null)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>描述</strong>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@_room.Description</p>
                        </div>
                    </div>
                }

                <button class="btn btn-outline-secondary w-100" @onclick="GoBack">
                    ← 返回房间列表
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string RoomId { get; set; } = string.Empty;

    private RoomInfo? _room;
    private PlaybackUrls? _playbackUrls;
    private bool _isLoading;
    private bool _isPlaying;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoomData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _playbackUrls != null)
        {
            // 自动开始播放
            await Play();
        }
    }

    private async Task LoadRoomData()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            _room = await RoomService.GetRoomAsync(RoomId);
            if (_room == null)
            {
                _errorMessage = "房间不存在";
                return;
            }

            _playbackUrls = await RoomService.GetPlaybackUrlsAsync(RoomId);
        }
        catch (Exception ex)
        {
            _errorMessage = $"加载房间信息失败: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task Play()
    {
        if (_playbackUrls == null) return;

        _isLoading = true;
        try
        {
            // 优先使用 H.264 转码流（Web 兼容）
            var url = _playbackUrls.HttpFlvH264Url ?? _playbackUrls.HttpFlvUrl;
            if (string.IsNullOrEmpty(url))
            {
                _errorMessage = "无可用播放地址";
                return;
            }

            await PlayerService.InitializeAsync("videoPlayer", url);
            await PlayerService.PlayAsync();
            _isPlaying = true;
        }
        catch (Exception ex)
        {
            _errorMessage = $"播放失败: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task Stop()
    {
        await PlayerService.StopAsync();
        _isPlaying = false;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private string GetStatusBadgeClass(YASS.Shared.Enums.RoomStatus status)
    {
        return status switch
        {
            YASS.Shared.Enums.RoomStatus.Live => "bg-success",
            YASS.Shared.Enums.RoomStatus.Waiting => "bg-warning text-dark",
            YASS.Shared.Enums.RoomStatus.Ended => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText(YASS.Shared.Enums.RoomStatus status)
    {
        return status switch
        {
            YASS.Shared.Enums.RoomStatus.Live => "直播中",
            YASS.Shared.Enums.RoomStatus.Waiting => "等待中",
            YASS.Shared.Enums.RoomStatus.Ended => "已结束",
            _ => "未知"
        };
    }

    public async ValueTask DisposeAsync()
    {
        await PlayerService.DisposeAsync();
    }
}
